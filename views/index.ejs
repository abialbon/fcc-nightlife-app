<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Nighlty Bars</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/bulma.css">
    <link rel="stylesheet" href="/css/main.css">
    <script>
        <% if (user._id) { %>
            window.pass = true
            window.userSearch = '<%- user.recentSearch  %>';
        <% } %>
    </script>
</head>
<body>
    <!--------- Hero ------------------------------------------>
    <div class="hero is-medium is-bold is-primary">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">Nighlty Bars</h1>
                <h2 class="subtitle">Be on the most happening place tonight</h2>
                <h3>
                    <i class="fa fa-map-marker title"></i>
                    <i class="fa fa-glass title"></i>
                    <i class="fa fa-heart title"></i>
                </h3>
                <div class="columns is-centered">
                    <div class="column is-half-desktop is-two-thirds-tablet">
                        <from>
                            <div class="field has-addons">
                                <div class="control is-expanded">
                                    <input id="search-term" class="input">
                                </div>
                                <div class="control">
                                    <button id="search-button" class="button"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </from>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--------- Card Area ------------------------------------->
    <section>
        <img id="spinner" src="/assets/spinner.svg" alt="Spinner">
        <div id="card-area" class="container">
        </div>
    </section>

    <!--------- Script ------------------------------------->
    <script src="/js/app.js"></script>
</body>
</html>